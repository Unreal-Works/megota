{
    "compilerOptions": {
        "target": "esnext",
        "module": "es2022",
        "moduleResolution": "node10",
        "esModuleInterop": true,
        "isolatedModules": true,
        "declaration": true,
        "outDir": "./out",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "lib": [
            "ESNext",
            "dom"
        ],
        "strictFunctionTypes": true
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
}